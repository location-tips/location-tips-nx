{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-css-modules",
    "stylelint-config-recess-order"
  ],
  "plugins": ["stylelint-order"],
  "rules": {
    "selector-class-pattern": [
      "^[a-z]+([a-zA-Z0-9]+)?$",
      {
        "message": "Class selector name must be single word or camelCase"
      }
    ]
  }
}
